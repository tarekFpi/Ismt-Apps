                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="wrap_content"
                        android:background="#85FFFFFF"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Team C Carry: \n20"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#85FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="A ID: \nnasim"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="wrap_content"
                        android:background="#85FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="B ID: \nnasim"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="wrap_content"
                        android:background="#85FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="C ID: \nnasim"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#85FFFFFF" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Designation: \nnull"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
